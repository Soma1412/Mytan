<h1>見たことない単語だ<h1>
  <div class="items-sell-main">
    <h1 class="items-sell-title">単語の情報を入力</h2>
    <%= form_with model: @word, local: true do |f| %>
    <%# <%= render 'shared/error_messages', model: f.object %> 
    <div class="img-upload">
      <div class="weight-bold-text">
        画像
      </div>
      <div class="click-upload">
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>

    <div class="new-words">
      <div class="weight-bold-text">
        英単語
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :word_name, class:"words-text", id:"word-name", placeholder:"英単語入力", maxlength:"40" %>
      
      <div class="words-meaning">
      <div class="weight-bold-text">
        意味
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :word_name, class:"words-text", id:"word-name", placeholder:"英単語入力", maxlength:"40" %>
      
      <div class="items-explain">
        <div class="weight-bold-text">
          商品の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :explain, class:"items-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
  
    <div class="items-detail">
      <div class="weight-bold-text">商品の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%# <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %> 
    </div>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "出品する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>
